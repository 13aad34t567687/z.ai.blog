generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String
  summary   String?
  header    String?
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  tags      BlogTag[]
  
  @@map("blog")
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())
  
  // Relations
  blogs     BlogTag[]
  
  @@map("tag")
}

model BlogTag {
  id        String   @id @default(cuid())
  blogId    String
  tagId     String
  createdAt DateTime @default(now())
  
  // Relations
  blog      Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)
  
  @@unique([blogId, tagId])
  @@map("blog_tag")
}